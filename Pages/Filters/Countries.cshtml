@page
@model CountriesModel
@{
  ViewData["Title"] = "InfoCovid";
}

<h3>Países</h3>
<p>Última atualização: @Model.Date</p>
<div class="table-responsive">
  <table id="CountriesTable" class="table table-striped table-hover table-dark" style="width:100%">
    <thead class="thead-dark">
      <tr>
        <th scope="col">País</th>
        <th scope="col">Casos confirmados</th>
        <th scope="col">Casos recuperados</th>
        <th scope="col">Óbitos</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in @Model.Countries)
      {
        <tr>
          <a href="/fitro/pais" class="" name="pais" role="button"><td>@item.Name</td></a>
          <a href="/fitro/pais" class="" name="pais" role="button"><td>@item.TotalConfirmed</td></a>
          <a href="/fitro/pais" class="" name="pais" role="button"><td>@item.TotalRecovered</td></a>
          <a href="/fitro/pais" class="" name="pais" role="button"><td>@item.TotalDeaths</td></a>
        </tr>
      }
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>